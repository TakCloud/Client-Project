{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "root": true,
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true,
    }
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/require-default-props": 0,
    "react/no-array-index-key": 0,
    "react/forbid-prop-types": 0,
    "react/prefer-stateless-function": 0,
    "no-unused-vars": 0,
    "no-undefined": 0,
    "no-shadow": 0,
    "arrow-body-style": 0,
  },
  "globals": {
    "__dirname": true
  },
  "plugins": [
    "react",
    "import"
  ]
}
